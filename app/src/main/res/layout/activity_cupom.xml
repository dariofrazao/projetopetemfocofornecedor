<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_degrade"
    tools:context="projetaobcc20172.com.projetopetemfocofornecedor.activity.CupomActivity">

    <ListView
        android:id="@+id/lv_cupom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:layout_above="@+id/ll_main">

    </ListView>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnCadastroCupom"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_action_add"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

</RelativeLayout>